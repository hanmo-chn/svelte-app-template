{
	"name": "@hanmotec/app-template",
	"version": "0.1.2",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run scss:prod && svelte-kit sync && svelte-package",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"scss:prod": "node-sass src/themes/hanmo-app.scss -o src/lib --output-style compressed",
		"publish": "cd ./package && npm publish -access public"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"node-sass": "^8.0.0",
		"sass": "^1.57.1",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "4.0.4"
	},
	"dependencies": {
		"@hanmotec/advance-datatable": "^0.0.1",
		"@hanmotec/tsui-button": "^0.0.1",
		"@hanmotec/tsui-pagination": "^0.0.1",
		"@ticatec/enhanced-utils": "^0.0.4"
	},
	"type": "module"
}
